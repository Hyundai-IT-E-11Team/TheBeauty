<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kosa.theBeauty.survey.dao.SurveyDAO">
	<resultMap type="SurveyVO" id="SurveyVOMap">
		<result column="user_seq" property="userSeq"/>
		<result column="survey_skintype" property="surveySkintype"/>
		<result column="survey_personal_color" property="surveyPersonalColor"/>
		<result column="survey_jewelry_color" property="surveyJewelryColor"/>
		<result column="survey_skintone" property="surveySkintone"/>
	</resultMap>
	
	<!-- 설문 답변 등록 -->
	<insert id="insertSurvey" parameterType="SurveyVO">
		INSERT INTO tb_survey (user_seq, survey_skintype, survey_personal_color, survey_jewelry_color, survey_skintone)
		VALUES(#{userSeq}, #{surveySkintype}, #{surveyPersonalColor}, #{surveyJewelryColor}, #{surveySkintone})
	</insert>
	
</mapper>

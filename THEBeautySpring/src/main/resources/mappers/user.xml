<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.kosa.theBeauty.user.dao.RegisterDAO">
	<resultMap type="RegisterVO" id="RegisterMap">
		<result column="user_mail" property="userMail"/>
		<result column="user_pw" property="userPw"/>
		<result column="user_name" property="userName"/>
		<result column="user_registration" property="userRegistration"/>
		<result column="user_mobile" property="userMobile"/>
	</resultMap>
	
	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO tb_user
		VALUES(#{userMail}, #{userPw}, #{userName}, #{userRegistration}, #{userMobile})
	</insert>
	
	<!-- 비밀번호 찾기 -->
	<select id="selectPassword" parameterType="UserVO" resultMap="UserVOMap">
		SELECT *
		  FROM tb_user 
		 WHERE user_mail = #{userMail} 
		   AND user_registration = #{userRegistration}
	</select>

</mapper>
